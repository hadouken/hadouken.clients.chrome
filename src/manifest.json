{
  "manifest_version": 2,

  "name": "Hadouken",
  "short_name": "hdkn",
  "version": "0.0",
  "description": "Hadouken tools and support services.",

  "background": {
    "scripts": ["js/lib/jquery-1.11.0.min.js", "js/lib/jquery.jsonrpc.js", "js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://thepiratebay.se/*", "http://thepiratebay.se/*"],
      "js": ["js/lib/jquery-1.11.0.min.js", "js/sites/thepiratebay.js"]
    }
  ],

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",
  
  "permissions": ["<all_urls>", "notifications"],

  "web_accessible_resources": [
    "images/icon16.png"
  ]
}