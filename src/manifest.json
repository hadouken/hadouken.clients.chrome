{
  "manifest_version": 2,

  "name": "Hadouken",
  "version": "0.0",
  "description": "Hadouken for Google Chrome.",

  "background": {
    "scripts": ["js/lib/jquery-1.11.0.min.js", "js/lib/jquery.jsonrpc.js", "js/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon16.png",
      "38": "images/icon48.png"
    },
    "default_title": "Hadouken",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://thepiratebay.se/*", "http://thepiratebay.se/*"],
      "js": ["js/lib/jquery-1.11.0.min.js", "js/sites/thepiratebay.js"]
    }
  ],

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",
  
  "permissions": [
    "<all_urls>",
    "notifications",
    "storage"
  ],

  "web_accessible_resources": [
    "images/icon12.png"
  ]
}